<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spark.ab.newspaper.PlayWITHnumbers_Activity">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:gravity="center"

        android:text="Play With Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ff96fc"
        android:textColorHighlight="#ede1ed"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/insTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="25sp"

        android:gravity="center"
        android:text="Guess a number between"
        android:textColor="#ff96fc"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView
        android:id="@+id/insT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insTv"

        android:gravity="center"
        android:text="0-99"
        android:textColor="#ff96fc"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <EditText
        android:id="@+id/numberET"
        android:hint="Enter the number you Guess"
        android:textSize="20dp"
        android:maxLength="2"
        android:inputType="number"
        android:layout_below="@+id/insTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp"
        android:textColorHint="#f19668"
        android:textColor="#ff96fc"
        android:textStyle="bold"
        android:gravity="center"
        />


    <Button
        android:id="@+id/submittv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:text="Guess" />
    <TextView
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sc1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        android:textColorHighlight="#ede1ed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Score" />

    <TextView
        android:id="@+id/sc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ff96fc"
        android:textColorHighlight="#ede1ed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Tried 0 times" />

    <TextView
        android:id="@+id/hsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-92dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        android:textColorHighlight="#ede1ed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="High Score= N/A" />



</RelativeLayout>
